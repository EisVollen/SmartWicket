@model IEnumerable<SmartWicket.DataBase.Objects.VisitDTO>

@{
    ViewBag.Title = "Список";
}

<h2>Список посещений в организации:</h2>

<p>
    @Html.ActionLink("Новое посещение", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VisitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VisitorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VisitDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VisitorName)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Просмотр", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удаление", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
